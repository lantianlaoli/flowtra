NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_publishable_default_key

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# OpenRouter API for AI image description and creative prompt generation
OPENROUTER_API_KEY=your_openrouter_api_key

# OpenRouter model configuration
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# Kie.ai API for file upload, image generation, and video generation
KIE_API_KEY=your_kie_api_key

# KIE Callback URLs for webhook notifications (recommended for faster updates)
# These webhooks will receive notifications when KIE tasks complete (success/failure)
# Leave empty to use polling-only mode

# Standard ads image generation callback URL
# Example: https://your-domain.com/api/webhooks/standard-ads
KIE_STANDARD_ADS_CALLBACK_URL=

# Multi-variant ads image generation callback URL
# Example: https://your-domain.com/api/webhooks/multi-variant-ads
KIE_MULTI_VARIANT_ADS_CALLBACK_URL=

# Character ads image generation callback URL
# Example: https://your-domain.com/api/webhooks/character-ads
KIE_CHARACTER_ADS_CALLBACK_URL=

# YouTube thumbnail generation callback URL
# Example: https://your-domain.com/api/webhooks/youtube-thumbnail
KIE_YOUTUBE_THUMBNAIL_CALLBACK_URL=

# Legacy callback URL (deprecated, use specific URLs above)
# Kept for backward compatibility
KIE_ADS_IMAGE_CALLBACK_URL=


# Minimum credits required for service availability checks
# If KIE credits fall below this threshold, the app shows maintenance
KIE_CREDIT_THRESHOLD=300


# Supabase Service Role Key (Required for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Resend (email notifications)
# Generate at https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key
# Who should receive admin notifications for new user first login
NOTIFY_EMAIL_TO=you@example.com
# Optional: custom from address (defaults to onboarding@resend.dev)
RESEND_FROM=Product <onboarding@resend.dev>

# Creem Payment Configuration
CREEM_ENVIRONMENT=development
CREEM_API_URL_DEV=https://test-api.creem.io/v1/checkouts
CREEM_API_URL_PROD=https://api.creem.io/v1/checkouts
CREEM_API_KEY_DEV=your-dev-api-key
CREEM_API_KEY_PROD=your-prod-api-key

# Package Product IDs for Creem (Based on pricing)
# New IDs
LITE_PACK_CREEM_DEV_ID=lite-dev-product-id
LITE_PACK_CREEM_PROD_ID=lite-prod-product-id
BASIC_PACK_CREEM_DEV_ID=basic-dev-product-id
BASIC_PACK_CREEM_PROD_ID=basic-prod-product-id
PRO_PACK_CREEM_DEV_ID=pro-dev-product-id
PRO_PACK_CREEM_PROD_ID=pro-prod-product-id

# (Starter plan has been renamed to Basic; legacy STARTER_* envs removed)

# SEO Configuration (Optional but recommended)
GOOGLE_SITE_VERIFICATION=your-google-site-verification
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.flowtra.store

# Contact & Social Media
NEXT_PUBLIC_X=https://x.com/your-handle
NEXT_PUBLIC_LINKEDIN=www.linkedin.com/in/your-profile
NEXT_PUBLIC_TIKTOK=https://www.tiktok.com/@your-handle
NEXT_PUBLIC_THREADS=https://www.threads.com/@your-handle
NEXT_PUBLIC_EMAIL=your-email@example.com

# PostHog Analytics Configuration
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_POSTHOG_SESSION_REPLAY_ENABLED=true
NEXT_PUBLIC_POSTHOG_SESSION_REPLAY_SAMPLE_RATE=0.1

# fal.ai API for video processing (video merging)
FAL_KEY=your-fal-key
